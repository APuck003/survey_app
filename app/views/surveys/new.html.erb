<div class="row">
  <div class="col s12 m6">
    <h4>New Survey</h4>

    <%= form_for @survey do |f| %>
      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>

      <p>
        <%= f.label "due date" %>
        <%= f.date_field :date, class: "form-control" %>
      </p>

      <%= f.submit %>
    <% end %>

  </div>
</div>
