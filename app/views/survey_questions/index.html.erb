<div class="row">
  <div class="col s12 m6">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Survey Questions</h4></li>
      <!-- list survey questions for this survey -->
      <% @questions.each do |question| %>
        <li class="collection-item">
          <%= question.question %>
          <%= link_to "Edit", edit_survey_survey_question_path(@questions, :question_id) %>

          <%#= link_to "Delete", survey_survey_questions_path,
                      :data => {
                          :confirm => "Are you sure?",
                          :method => "delete"
                      } %>
        </li>
      <% end %>
    </ul>

    <div class="row">
      <div class="col s12 m6">
        <%= link_to('Create Question',
                    new_survey_survey_question_path,
                    class: "btn waves-effect waves-light") %>
      </div>
    </div>
  </div>
</div>
