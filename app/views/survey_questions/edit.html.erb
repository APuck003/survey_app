<div class="row">
  <div class="col s12 m6">
    <h4>Edit Survey Question</h4>

    <%= form_for @question do |questions_form| %>
      <p>
        <%= questions_form.label :question %>
        <%= questions_form.text_field :question %>
      </p>

      <p>
        <%= questions_form.submit %>
      </p>
    <% end %>

  </div>
</div>
